@using Microsoft.AspNetCore.Identity

@inject SignInManager<Users> SignInManager
@inject UserManager<Users> UserManager

<div class="dropdown-menu m-0 bg-secondary rounded-0">
    @if (SignInManager.IsSignedIn(User))
    {
        <a id="manage" class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Perfil</a>

        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Cerrar Sesión</button>
        </form>
    }
    else
    {
        <a class="dropdown-item" id="register" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>

        <a class="dropdown-item" id="login" asp-area="Identity" asp-page="/Account/Login">Inicio de sesión</a>
    }
</div>