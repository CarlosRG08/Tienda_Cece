

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Gracias</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v6.4.2/css/all.css"
          crossorigin="anonymous" />

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>



@{
    ViewData["Title"] = "Gracias por tu mensaje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid contact py-5">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="text-primary">¡Gracias por tu mensaje!</h1>
                        <p class="lead mb-4">Pronto nos pondremos en contacto contigo.</p>
                        @if (TempData["MensajeExito"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["MensajeExito"]
                            </div>
                        }
                        <a href="@Url.Action("Index", "Contacto")" class="btn bg-secondary text-light rounded-pill py-3 px-5">Volver al formulario de contacto</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
