@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block">
                                <div class="m-b-25">
                                    @if (Model.Input.ProfilePicture != null)
                                    {
                                        <img src="data:image/png;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" alt="User-Profile-Image" />
                                    }
                                    else
                                    {
                                        <img src="~/img/icon-image-not-found.jpg" alt="User-Profile-Image" />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h5 class="m-b-20 p-b-5 b-b-default f-w-600" style="color:#a63030;">Información de perfil</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="m-b-10 f-w-600">Nombre</p>
                                        <h6 class="text-muted f-w-400">@Model.Input.Name</h6>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="m-b-10 f-w-600">Apellido</p>
                                        <h6 class="text-muted f-w-400">@Model.Input.LastName</h6>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400">@Model.Input.Email</h6>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="m-b-10 f-w-600">Número de teléfono</p>
                                        <h6 class="text-muted f-w-400">@Model.Input.PhoneNumber</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Botones en card al lado derecho -->
            <div class="col-xl-6">
                <div class=" ">
                    <div class="card-body text-center ">
                        <a asp-page="./PurchaseHistory" class="btn bg-primary text-dark mt-1">Historial de Compras</a>
                        <a asp-controller="Favoritos" asp-action="Favoritos" class="btn bg-secondary text-light mt-1">Lista de Favoritos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
